<%- include("includes/head.ejs"); %>
<body>
<div id="pageTwo">
  
 

<div id="projectPage">

    <!-- TITLE -->
    <h1 class="projectTitle"><%= project.projectName %></h1>


    <!-- MEDIA -->
    <div class="mediaWrapper">

        <% if(project.video){ %>

            <video controls autoplay muted loop>
                <source src="<%= project.video %>" type="video/mp4">
            </video>

        <% } else { %>

            <img src="<%= project.image || '/images/project-placeholder.jpg' %>">

        <% } %>

    </div>


    <!-- MAIN INFO CARD -->
    <div class="projectCardDetail">

        <!-- DESCRIPTION -->
        <section>
            <h2>Description</h2>
            <p><%= project.description %></p>
        </section>


        <!-- TECH STACK -->
        <section>
            <h2>Tech Stack</h2>

            <div class="tags">

                <% project.techStack.languages.forEach(l=>{ %>
                    <span><%= l %></span>
                <% }) %>

                <% project.techStack.frameworks.forEach(f=>{ %>
                    <span><%= f %></span>
                <% }) %>

                <% project.techStack.databases.forEach(d=>{ %>
                    <span><%= d %></span>
                <% }) %>

                <% project.techStack.tools.forEach(t=>{ %>
                    <span><%= t %></span>
                <% }) %>

            </div>
        </section>


        <!-- FEATURES -->
        <section>
            <h2>Features</h2>
            <ul>
                <% project.features.forEach(f=>{ %>
                    <li><%= f %></li>
                <% }) %>
            </ul>
        </section>


        <!-- HIGHLIGHTS -->
        <section>
            <h2>Highlights</h2>
            <ul>
                <% project.highlights.forEach(h=>{ %>
                    <li><%= h %></li>
                <% }) %>
            </ul>
        </section>


        <!-- META INFO -->
        <section class="meta">

            <div><strong>Role:</strong> <%= project.role %></div>
            <div><strong>Status:</strong> <%= project.status %></div>
            <div><strong>Duration:</strong> <%= project.startDate %> â†’ <%= project.endDate %></div>

        </section>


        <!-- LINKS -->
        <section class="links">

            <% if(project.githubLink){ %>
                <a href="<%= project.githubLink %>" target="_blank">GitHub</a>
            <% } %>

            <% if(project.liveLink){ %>
                <a href="<%= project.liveLink %>" target="_blank">Live Demo</a>
            <% } %>

        </section>

    </div>

</div>


</div>
<script src="app.js" type="module"></script>
<%- include("includes/footer.ejs"); %>
<%- include("includes/jsscript.ejs"); %>
</body>
</html>